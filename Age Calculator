<body>
  <div class="container">
    <h1>Age Calculator</h1>
    <div class="form-group">
      <label for="dob">Select Your Date of Birth</label>
      <input type="date" id="dob" />
    </div>
    <button id="calcBtn">Calculate Age</button>
    <div id="result" class="result"></div>
  </div>

  <script>
    const dobInput = document.getElementById('dob');
    const calcBtn = document.getElementById('calcBtn');
    const resultDiv = document.getElementById('result');

    calcBtn.addEventListener('click', () => {
      const dobValue = dobInput.value;
      if (!dobValue) {
        resultDiv.textContent = "Please select your birth date.";
        return;
      }

      const today = new Date();
      const birthDate = new Date(dobValue);

      let years = today.getFullYear() - birthDate.getFullYear();
      let months = today.getMonth() - birthDate.getMonth();
      let days = today.getDate() - birthDate.getDate();

      if (days < 0) {
        months--;
        const prevMonth = new Date(today.getFullYear(), today.getMonth(), 0);
        days += prevMonth.getDate();
      }

      if (months < 0) {
        years--;
        months += 12;
      }

      resultDiv.textContent = `You are ${years} years, ${months} months, and ${days} days old.`;
    });
  </script>
</body>
